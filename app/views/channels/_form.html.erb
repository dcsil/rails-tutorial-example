<%= form_with(model: channel) do |form| %>
  <div class="form-group <% if channel.errors[:name].any? %>errored<% end %>">
    <div class="form-group-header">
      <%= form.label :name %>
    </div>
    <div class="form-group-body">
      <%= form.text_field :name, class: "form-control", "aria-describedby": channel.errors[:name].any? ? "name-input-validation" : nil %>
      <% if channel.errors[:name].any? %>
        <p class="note error" id="name-input-validation">Name <%= channel.errors[:name].to_sentence %>.</p>
      <% end %>
    </div>
  </div>

  <div class="form-group <% if channel.errors[:description].any? %>errored<% end %>">
    <div class="form-group-header">
      <%= form.label :description %>
    </div>
    <div class="form-group-body">
      <%= form.text_area :description, class: "form-control", "aria-describedby": channel.errors[:description].any? ? "name-input-validation" : nil %>
      <% if channel.errors[:description].any? %>
        <p class="note error" id="description-input-validation">Description <%= channel.errors[:description].to_sentence %>.</p>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
