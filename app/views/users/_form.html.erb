<%= form_with(model: user) do |form| %>
  <div class="form-group <% if user.errors[:name].any? %>errored<% end %>">
    <div class="form-group-header">
      <%= form.label :name %>
    </div>
    <div class="form-group-body">
      <%= form.text_field :name, class: "form-control", "aria-describedby": user.errors[:name].any? ? "name-input-validation" : nil %>
      <% if user.errors[:name].any? %>
        <p class="note error" id="name-input-validation">Name <%= user.errors[:name].to_sentence %>.</p>
      <% end %>
    </div>
  </div>

  <div class="form-group <% if user.errors[:email].any? %>errored<% end %>">
    <div class="form-group-header">
      <%= form.label :email %>
    </div>
    <div class="form-group-body">
      <%= form.text_field :email, class: "form-control", "aria-describedby": user.errors[:email].any? ? "email-input-validation" : nil %>
      <% if user.errors[:name].any? %>
        <p class="note error" id="name-input-validation">Name <%= user.errors[:name].to_sentence %>.</p>
      <% end %>
    </div>
  </div>

  <div class="form-group <% if user.errors[:preferred_pronouns].any? %>errored<% end %>">
    <div class="form-group-header">
      <%= form.label :preferred_pronouns %>
    </div>
    <div class="form-group-body">
      <%= form.text_field :preferred_pronouns, class: "form-control", "aria-describedby": user.errors[:preferred_pronouns].any? ? "preferred_pronouns-input-validation" : nil %>
      <% if user.errors[:preferred_pronouns].any? %>
        <p class="note error" id="preferred_pronouns-input-validation">Preferred Pronouns <%= user.errors[:preferred_pronouns].to_sentence %>.</p>
      <% end %>
    </div>
  </div>
  <div class="form-group <% if user.errors[:bio].any? %>errored<% end %>">
    <div class="form-group-header">
      <%= form.label :bio %>
    </div>
    <div class="form-group-body">
      <%= form.text_area :bio, class: "form-control", "aria-describedby": user.errors[:bio].any? ? "bio-input-validation" : nil %>
      <% if user.errors[:bio].any? %>
        <p class="note error" id="bio-input-validation">Bio <%= user.errors[:bio].to_sentence %>.</p>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
